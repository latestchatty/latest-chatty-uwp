<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Werd.Converters">
    <Color x:Key="ApplicationPageBackgroundColor">Black</Color>
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="{StaticResource ApplicationPageBackgroundColor}" />
    <Color x:Key="SelectedPostBackgroundColor">#FF222222</Color>
    <SolidColorBrush x:Key="SelectedPostBackgroundBrush" Color="{StaticResource SelectedPostBackgroundColor}" />
    <Color x:Key="RootPostSidelineColor">#FF333333</Color>
    <AcrylicBrush
        x:Key="ReplyHeaderBrush"
        BackgroundSource="Backdrop"
        FallbackColor="{ThemeResource SystemAccentColor}"
        TintColor="{ThemeResource SystemAccentColor}"
        TintOpacity="0.7" />
    <converters:BooleanToNewColorConverter
        x:Key="NewReplyConverter"
        FalseValue="#999999"
        TrueValue="White" />
</ResourceDictionary>
